@import 'lib/font_face.styl'
@import 'lib/color.styl'

reset-html5()
body, html
    margin 0
    padding 0

    background-color colors_fold_white

    height 100vh
    display flex
    flex-direction column
    overflow-y hidden

@import 'lib/banner.styl'


header
    background-image var(--header-image)
    background-position center
    background-size cover

    h1, h2 { color: var(--main-color) }
    p, a { color: colors_fold_black }
    a:hover, a.atual { color: var(--main-color) }

main
    flex 1
    display flex
    padding 2vw

    box-sizing border-box
    width 100%
    overflow-x auto

    &:after
        display block
        content ""
        flex 0 0 1px
        height 1px

    .post
        margin-right 1.5vw
        height 100%
        display flex
        flex-direction column

        flex 0 0 25%
        overflow hidden
        border-radius 10px
        background-color white

        box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25);

        *
            flex 0 0 auto

        .img
            height 35%
            overflow hidden
            relative top 0 left 0
            transform rotate(-0.8deg) scale(1.05)
            transform-origin center

            box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)

            margin-bottom 5%

            img
                min-width 100%
                min-height 100%

                absolute top 50% left 50%
                transform translate(-50%, -50%);
            
            .border
                width 100%
                height 1.2em

                absolute bottom 0 left 0

                box-shadow inset 0px 2px 2px rgba(0, 0, 0, 0.25)

                &:before
                    content ""
                    display block
                    background-color inherit

                    width 100%
                    height 0.5em

                    absolute bottom 1.5em left 0

                    box-shadow inset 0px 2px 2px rgba(0, 0, 0, 0.25)
        .info
            display flex
            flex-wrap wrap
            align-items center

            padding 0 5%

            h2
                margin 0
                flex 0 0 100%
                font-family 'Quicksand'
                variant-weight 700
                font-size 1.1rem
                letter-spacing 0.05em
                color colors_fold_black
            
            .date
                flex 1
                font-family 'Quicksand'
                variant-weight 300
                font-size 0.8rem
                color colors_fold_gray
            
            .category
                flex 1
                text-align right
                font-family 'Quicksand'
                variant-weight 700
                font-size 1rem

                text-shadow 0px 2px 2px rgba(0, 0, 0, 0.25)
        
        .text
            padding 0 5%
            flex 1
            display flex
            flex-direction column

            p
                flex 1
                font-family 'Quicksand'
                variant-weight 400
                font-size 1rem
                color colors_fold_black
                line-height 1.5
            
            hr
                border none

                height 2px
                border-radius 9999px
                width 100%

                margin 5% 0
            
            a
                font-family 'Quicksand'
                variant-weight 700
                font-size 1.1rem
                color white
                text-decoration none
                
                padding 0.4em 2em
                border-radius 5px
                width auto
                display block
                margin auto
                margin-bottom 5%
