@import 'lib/font_face.styl'
@import 'lib/color.styl'

reset-html5()
body, html
    margin 0
    padding 0

    background-color colors_fold_white

    height 100vh
    display flex
    flex-direction column
    overflow-y hidden

@import 'lib/banner.styl'


header
    background-image var(--header-image)
    background-position center
    background-size cover

    h1, h2 { color: var(--main-color) }
    p, a { color: colors_fold_black }
    a:hover, a.atual { color: var(--main-color) }

main
    flex 1
    display flex
    padding 2vw

    box-sizing border-box
    width 100%
    overflow-x auto

    @media screen and (max-width: 600px)
        flex-direction column
        align-items center

        padding-left 5vw
        padding-right 5vw

    &:after
        display block
        content ""
        flex 0 0 1px
        height 1px

    .post
        display flex
        flex-direction column
        height 100%

        flex 0 0 auto
        overflow hidden
        border-radius 10px
        background-color white

        box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25);

        transition 0.3s transform
        
        &.destaque
            @media screen and (max-width: 600px)
                width calc(100% + 10vw)
                border-radius 0
                margin-top 3.5vh
                margin-bottom 0.5vh

            @media screen and (min-width: 600px)
                flex-wrap wrap
                flex-basis 36rem

                &.resizing
                    .img 
                        flex 0 0 99%
                        transform none
                    
                    .text
                        max-height calc(100% - 6rem)
                
                .img 
                    flex 0 0 100%
                    width 15rem

                    transform rotate(0.8deg) scale(1.05)

                    .border
                        top 0
                        right 0
                        bottom auto
                        left auto
                        
                        width 1.2rem
                        height 100%

                        &:before
                            width 0.5rem
                            height 100%

                            top 0
                            right 1.5em

                            bottom auto
                            left auto
                
                .info
                    display block
                    width calc(100% - 17rem)

                    padding 0
                    margin 1rem
                
                .text
                    width calc(100% - 17rem)
                    padding 0

                    margin-left 1rem
        
        @media screen and (max-width: 600px)
            margin-top 3vh

        @media screen and (min-width: 600px)
            margin-right 1.5vw
            flex-basis 22rem
        
        &:hover
            transform scale(1.02)

        *
            flex 0 0 auto

        .img
            height 35%
            overflow hidden
            relative top 0 left 0
            transform rotate(-0.8deg) scale(1.05)
            transform-origin center

            box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)

            margin-bottom 5%

            cursor pointer

            img
                min-width 100%
                min-height 100%

                absolute top 50% left 50%
                transform translate(-50%, -50%);
            
            .border
                width 100%
                height 1.2em

                absolute bottom 0 left 0

                box-shadow inset 0px 2px 2px rgba(0, 0, 0, 0.25)

                &:before
                    content ""
                    display block
                    background-color inherit

                    width 100%
                    height 0.5em

                    absolute bottom 1.5em left 0

                    box-shadow inset 0px 2px 2px rgba(0, 0, 0, 0.25)
        .info
            display flex
            flex-wrap wrap
            align-items center

            padding 0 5%

            cursor pointer

            h2
                margin 0
                flex 0 0 100%
                font-family 'Quicksand'
                variant-weight 700
                font-size 1.1rem
                letter-spacing 0.05em
                color colors_fold_black
            
            .date
                flex 1
                font-family 'Quicksand'
                variant-weight 300
                font-size 0.8rem
                color colors_fold_gray
            
            .category
                flex 1
                text-align right
                font-family 'Quicksand'
                variant-weight 700
                font-size 1rem

                text-shadow 0px 2px 2px rgba(0, 0, 0, 0.25)
        
        .text
            padding 0 1rem
            flex 1
            display flex
            flex-direction column

            p
                flex 1
                font-family 'Quicksand'
                variant-weight 400
                font-size 1rem
                color colors_fold_black
                line-height 1.5

                margin-bottom 0

                cursor pointer

                .overflow
                    display none

                .elipsis
                    variant-weight 700
                    letter-spacing 0.05em
            
            hr
                border none

                height 2px
                border-radius 9999px
                width 100%

                margin 1rem 0
            
            a
                font-family 'Quicksand'
                variant-weight 700
                font-size 1.1rem
                color white
                text-decoration none
                
                padding 0.4em 2em
                border-radius 5px
                width auto
                display block
                margin 0 auto
                margin-bottom 1rem

                transition 0.3s filter

                &:hover
                    filter brightness(1.2)
