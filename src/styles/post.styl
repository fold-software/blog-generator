@import 'lib/font_face.styl'
@import 'lib/color.styl'

reset-html5()
body, html
    margin 0
    padding 0

    background-color colors_fold_white

header
    height 47vh
    width 100%

    overflow hidden

    .img
        width 105%
        height 27vh

        relative top 0 left 0
        overflow hidden

        transform rotate(-0.8deg) translate(-2.5%, -2vh)
        transform-origin center

        box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)

        img 
            min-width 100%
            min-height 100%

            absolute top 50% left 50%
            transform translate(-50%, -50%)
        
        .border
            width 100%
            height 1.2em

            absolute bottom 0 left 0

            box-shadow inset 0px 2px 2px rgba(0, 0, 0, 0.25)

            &:before
                content ""
                display block
                background-color inherit

                width 100%
                height 0.5em

                absolute bottom 1.5em left 0

                box-shadow inset 0px 2px 2px rgba(0, 0, 0, 0.25)
        
    .meta
        padding 0 15vw
        height 17vh
        margin-top 3vh
        
        display flex

        @media screen and (max-width: 600px)
            flex-direction column
        
        @media screen and (min-width: 600px)
            justify-content space-between
            align-items center

        .post

            @media screen and (min-width: 600px)
                max-width 50%

            a
                font-family 'Quicksand'
                text-decoration none
                variant-weight 300
                font-size 4.5vw
                letter-spacing 0.07em
                color colors_fold_gray

                @media screen and (min-width: 600px)
                    font-size 1.5vw
                    transition color 0.2s, font-weight 0.3s, font-variation-settings 0.3s, letter-spacing 0.3s

                    &:hover
                        color colors_fold_black
                        variant-weight 500
                        letter-spacing 0.05em
                

            h1
                font-family 'Quicksand'
                variant-weight 700
                font-size 5vw
                color colors_fold_black
                
                margin 0
                margin-top 0.5vh

                @media screen and (min-width: 600px)
                    font-size 2vw
                    margin-top 1vh
            
            .date
                font-family 'Quicksand'
                text-decoration none
                variant-weight 300
                font-size 3.2vw
                letter-spacing 0.05em

                color colors_fold_gray

                @media screen and (min-width: 600px)
                    font-size 0.8vw

        .category
            display flex
            align-items center

            @media screen and (max-width: 600px)
                justify-content space-between
                margin-top 2vh

                .content
                    flex 1
                    display flex
                    align-items center 
                    justify-content space-between

            img 
                max-height 4vh
                margin-right 2vw

                @media screen and (min-width: 600px)
                    max-height 15vh

            
            h2
                font-family 'Quicksand'
                font-size 5.5vw
                variant-weight 700
                margin 0

                @media screen and (min-width: 600px)
                    font-size 1.5vw

                span
                    margin-left 1vw
                    font-size 4vw
                    variant-weight 300

                    @media screen and (min-width: 600px)
                        font-size 1vw
            
            h3
               font-family 'Quicksand'
               font-size 4vw
               variant-weight 400
               margin 0

               @media screen and (min-width: 600px)
                   font-size 1vw
                   width 12vw
                
@import 'lib/article.styl'

#progress
    fixed bottom 0 left 0
    width 100vw
    height 0.5rem

    background-color white
    border-top 1px colors_fold_gray
